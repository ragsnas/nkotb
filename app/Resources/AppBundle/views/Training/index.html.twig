{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Training list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Type</th>
                <th>Start</th>
                <th>End</th>
                <th>Destinaton</th>
                <th>Spots</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('training_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.type }}</td>
                <td>{% if entity.start %}{{ entity.start|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.end %}{{ entity.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.destinaton }}</td>
                <td>{{ entity.spots }}</td>
                <td>
                    <a href="{{ path('register_for_training', { 'trainingId': entity.id }) }}" title="{{ 'common_edit'|trans }}">
                        <i class="fa fa-pencil-square-o"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
