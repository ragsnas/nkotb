{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User edit</h1>

    {{ form(edit_form) }}

        <hr/>

    <div class="btn-group">
        <a href="{{ path('user') }}" class="btn btn-primary">
            <i class="fa fa-list"></i> {{ 'common_back-to-list'|trans }}
        </a>
        <a href="{{ path('user_new') }}" class="btn btn-primary">
            <i class="fa fa-plus"></i> {{ 'common_create'|trans }}
