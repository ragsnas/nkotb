{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>{{ 'user_fields_id'|trans }}</th>
                <th>{{ 'user_fields_username'|trans }}</th>
                <th>{{ 'user_fields_email'|trans }}</th>
                <th>{{ 'user_fields_roles'|trans }}</th>
                <th>{{ 'common_actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.email }}</a></td>
                <td>
                    <a href="{{ path('user_show', { 'id': entity.id }) }}">
                        {%  if entity.roles %}
                            {% for role in entity.roles %}
                                {{ ('user_roles_' ~ role) |lower|trans }}{{ loop.last ?: ',' }}
                            {%  endfor %}
                        {% endif %}
                    </a>
                </td>
                <td>
                    <a href="{{ path('user_edit', { 'id': entity.id }) }}" title="{{ 'common_edit'|trans }}">
                        <i class="fa fa-pencil-square-o"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group">
        <a href="{{ path('user_new') }}" class="btn btn-primary">
            <i class="fa fa-plus"></i> {{ 'common_create'|trans }}
        </a>
    </div>

    {% endblock %}
