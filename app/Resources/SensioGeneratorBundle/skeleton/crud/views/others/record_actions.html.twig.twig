<div class="btn-group">
    <a href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}" class="btn btn-primary">
        <i class="fa fa-list"></i> {{ "{{ 'common_back-to-list'|trans }}" }}
    </a>
    {% if ('new' in actions) and (hide_new is defined and hide_new) %}
        <a href="{{ "{{ path('doorkey_new') }}" }}" class="btn btn-primary">
            <i class="fa fa-plus"></i> {{ "{{ 'common_new'|trans }}" }}
        </a>
    {% endif %}
    {% if ('edit' in actions) and (not hide_edit) %}
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity."~ identifier ~" }) }}" }}"  class="btn btn-primary">
            <i class="fa fa-edit"></i> {{ "{{ 'common_edit'|trans }}" }}
        </a>
    {% endif %}
</div>
